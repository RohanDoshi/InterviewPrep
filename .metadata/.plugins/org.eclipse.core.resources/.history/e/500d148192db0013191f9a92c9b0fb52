import java.util.Arrays;


public class Practice {
	public static void main(String args[]) { 
		Check c = new Check();
		int arr[] = {1, 4};
		int result[] = c.subArrayMeetsSumSimple(arr, 0);
		System.out.println(Arrays.toString(result));
		
	}
}

class Check { 
	
	int[] subArrayMeetsSumSimple(int a[], int sum) {
		int in1 = -1, in2 = -1;
		boolean found = false;
		for(int i=0; i<a.length; i++) {
			if(!found) {
				in1 = i;
				if(a[in1] == sum) {
					found = true;
					break;
				}
				int tempSum = a[in1];
				for(int j=i+1; j<a.length; j++) {
					in2 = j;
					tempSum = tempSum + a[j];
					if(tempSum == sum) {
						found = true;
						break;
					}
				}
				if(!found) {
					in1 = -1;
					in2 = -1;
				}
			}
		}
		
		if(!found)
			return new int[0];
		
		else {
			int result[] = new int[in2-in1+1];
			for(int i=in1; i<=in2; i++) {
				result[i-in1] = a[i];
			}
			
			return result;
		}
	}

}
